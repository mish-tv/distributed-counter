{
  // ---------------------------------------------------------------------------------------------------------------------------
  // editor
  // ---------------------------------------------------------------------------------------------------------------------------
  "editor.tabCompletion": "on",
  "editor.rulers": [128],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": [
    "source.fixAll.eslint",
    "source.fixAll.stylelint"
  ],

  // ---------------------------------------------------------------------------------------------------------------------------
  // files
  // ---------------------------------------------------------------------------------------------------------------------------
  "files.exclude": {
    "**/node_modules": true,
    "**/.cache": true,
    "**/.vercel": true,
    "**/.next": true,
    "packages/**/lib": true,
    "projects/server/**/lib": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true,
    "**/.cache/**": true,
    "**/.vercel/**": true,
    "**/.next/**": true
  },
  "search.followSymlinks": true,

  // ---------------------------------------------------------------------------------------------------------------------------
  // extensions
  // ---------------------------------------------------------------------------------------------------------------------------
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.options": { "overrideConfigFile": ".eslintrc.vscode.jsonc" },

  // ---------------------------------------------------------------------------------------------------------------------------
  // languages
  // ---------------------------------------------------------------------------------------------------------------------------
  "typescript.tsdk": "./node_modules/typescript/lib",
  "typescript.suggest.autoImports": false
}
